            <li><a href="<%=request.getContextPath() %>/member/member_join.jsp">회원가입</a></li>
            <li class="active">ID/PW찾기</li>
        </ul>
    </div>
	</div>

<!-- LoginForm start -->
		<div class="login">
			<div class="form2">
				<h3>ID/PW 찾기</h3><br>
				<form class="login-form">
					<!-- <label class="find_label">이름</label> -->
					<input type="text" placeholder="NAME" /><br>
					<!-- <label class="find_label">이메일</label> -->
					<input type="text" placeholder="EMAIL" /><br>
					<button>찾기</button>
					<p class="alternate">
						<a href="<%=request.getContextPath() %>/member/member_login.jsp">로그인</a>&nbsp;/&nbsp;
						<a href="<%=request.getContextPath() %>/member/member_join.jsp">회원가입</a>
